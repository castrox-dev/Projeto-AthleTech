# ============================================
# Configurações do Django
# ============================================
SECRET_KEY=dev-secret-key-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require
DB_SSL_REQUIRE=True

# ============================================
# Mercado Pago - Configurações
# ============================================
# Access Token (credencial privada - NUNCA exponha no frontend)
# Obtenha em: https://www.mercadopago.com.br/developers/panel/credentials
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_aqui

# Public Key (pode ser exposta no frontend - é segura)
# Obtenha em: https://www.mercadopago.com.br/developers/panel/credentials
MERCADOPAGO_PUBLIC_KEY=TEST-...ou-APP_USR-...

# URL do webhook (deve ser a URL pública do seu servidor)
MERCADOPAGO_WEBHOOK_URL=http://localhost:8000

# Usar MCP (Model Context Protocol) - opcional
MERCADOPAGO_USE_MCP=false

# ============================================
# Pagamento PIX (método simples - fallback)
# ============================================
PIX_KEY=sua-chave-pix-aqui

# ============================================
# CORS e Segurança
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# ============================================
# Configurações de Segurança (produção)
# ============================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ============================================
# Neon Auth (se estiver usando)
# ============================================
STACK_PROJECT_ID=
STACK_PUBLISHABLE_CLIENT_KEY=
STACK_SECRET_SERVER_KEY=
